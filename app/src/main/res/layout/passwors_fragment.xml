<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:background="#66913E"
    android:gravity="center"
    android:orientation="vertical">


    <EditText
        android:id="@+id/old_password_edit_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#43A047"
        android:ems="10"
        android:hint="Старый пароль"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/new_password_edit_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#43A047"
        android:ems="10"
        android:hint="Новый пароль"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_edit_text"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/confirm_password_edit_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#43A047"
        android:ems="10"
        android:hint="Подтвердите пароль"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_password_edit_text"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMaybe"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="#43A047"
        android:text="Поменять"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_edit_text"
        tools:ignore="MissingConstraints"></Button>

</LinearLayout>